@model AplicacaoWeb2.Models.Doador

@{
    ViewData["Title"] = "Excluir Doador";
}

<h1>Excluir Doador</h1>

<h3>Você tem certeza que deseja excluir este doador?</h3>
<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

    <dt class="col-sm-2">Descrição</dt>
    <dd class="col-sm-10">@Model.Descricao</dd>

    <dt class="col-sm-2">CPF/CNPJ</dt>
    <dd class="col-sm-10">@Model.CpfCnpj</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
