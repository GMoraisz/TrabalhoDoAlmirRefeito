@model AplicacaoWeb2.Models.Doador

@{
    ViewData["Title"] = "Detalhes do Doador";
}

<h1>Detalhes do Doador</h1>

<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

    <dt class="col-sm-2">Descrição</dt>
    <dd class="col-sm-10">@Model.Descricao</dd>

    <dt class="col-sm-2">CPF/CNPJ</dt>
    <dd class="col-sm-10">@Model.CpfCnpj</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
