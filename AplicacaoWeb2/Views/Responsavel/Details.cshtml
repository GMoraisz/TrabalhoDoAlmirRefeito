@model AplicacaoWeb2.Models.Responsavel

@{
    ViewData["Title"] = "Detalhes do Responsável";
}

<h1>Detalhes do Responsável</h1>

<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

    <dt class="col-sm-2">Telefone</dt>
    <dd class="col-sm-10">@Model.Telefone</dd>

    <dt class="col-sm-2">Endereço</dt>
    <dd class="col-sm-10">@Model.Endereco</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
