<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AplicacaoWeb2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/AplicacaoWeb2.styles.css" asp-append-version="true" />
    <style>
        .navbar-brand {
            font-weight: bold;
            color: #0056b3;
        }

            .navbar-brand:hover {
                color: #003d82;
            }

        .nav-item a {
            color: #555;
            transition: color 0.3s;
        }

            .nav-item a:hover {
                color: #0056b3;
            }

        .nav-link.active {
            font-weight: bold;
            color: #0056b3 !important;
        }

        footer {
            margin-top: 30px;
            padding: 15px 0;
            background-color: #f8f9fa;
        }

        .btn-icon {
            display: inline-flex;
            align-items: center;
        }

            .btn-icon i {
                margin-right: 5px;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> AplicacaoWeb2
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (ViewContext.HttpContext.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fas fa-shield-alt"></i> Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Aluno" asp-action="Index"><i class="fas fa-user-graduate"></i> Alunos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Curso" asp-action="Index"><i class="fas fa-book"></i> Cursos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Doador" asp-action="Index"><i class="fas fa-hand-holding-usd"></i> Doadores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Responsavel" asp-action="Index"><i class="fas fa-user-tie"></i> Responsáveis</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Relatorio" asp-action="RelatorioVisitas">
                                    <i class="fas fa-chart-bar"></i> Relatório
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Movimentacao" asp-action="Index">
                                    <i class="fas fa-exchange-alt"></i> Movimentações
                                </a>
                            </li>

                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (ViewContext.HttpContext.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-danger btn-sm btn-icon" asp-controller="User" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-primary btn-sm btn-icon" asp-controller="User" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="nav-link btn btn-outline-success btn-sm btn-icon" asp-controller="User" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; @DateTime.Now.Year - AplicacaoWeb2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
