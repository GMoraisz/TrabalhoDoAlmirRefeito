@model AplicacaoWeb2.Models.Movimentacao

<h1>Detalhes da Movimentação</h1>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Tipo</th>
        <td>@Model.Tipo</td>
    </tr>
    <tr>
        <th>Origem</th>
        <td>@Model.Origem</td>
    </tr>
    <tr>
        <th>Destino</th>
        <td>@Model.Destino</td>
    </tr>
    <tr>
        <th>Data</th>
        <td>@Model.DataMovimentacao.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Valor</th>
        <td>@Model.Valor.ToString("C")</td>
    </tr>
    <tr>
        <th>Descrição</th>
        <td>@Model.Descricao</td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Voltar</a>
